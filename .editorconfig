# https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 80
trim_trailing_whitespace = true
insert_final_newline = true

[*.{diff,md}]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2

[*.{bat,vbs,ps1}]
charset = utf-8-bom
end_of_line = crlf

[*.sh]
end_of_line = lf

[Makefile]
indent_style = tab

[*.patch]
trim_trailing_whitespace = false
